/* index.wxss */
.container1 {
  margin: 30rpx;
}
.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  margin-left: 5rpx;
  font-size: 44rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;/*水平居中*/
}
.itemView {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.you {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.input1 {
  border: #aebaf8 2rpx solid;
  border-radius: 10rpx;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 80%;
  margin-bottom: 20rpx;
}

.info {
  border: #ffffff00 2rpx solid;
  padding: 10rpx;
  border-radius: 10rpx;
  height: auto;
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 36rpx;
}

.loginBtn {
  margin-top: 40rpx;
  background: linear-gradient(to right, #f9957f, #f2f5d0, #aebaf8, #c973ff);
  width: 50%;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  outline: none;
}

.resetBtn {
  margin-top: 40rpx;
  background: linear-gradient(to right, #f9957f, #f2f5d0, #aebaf8, #c973ff);
  width: 50%;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  outline: none;
}

.view_btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 80%;
}

.chat-messages {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  margin-top: 2%;
}

.chat-bubble {
    display: inline-block;
    max-width: 70%;
    padding: 10px;
    border-radius: 10px;
    margin-bottom: 10px;
  }

  .chat-bubble.you {
    background-color: #aebaf8;
    color: #fff;
    float: left;
  }

  .chat-bubble.me {
    background-color: #f2f2f2;
    color: #000;
    float: right;
  }

  .chat-name {
    font-size: 14px;
    margin-bottom: 5px;
  }

  .chat-content {
    border: 2rpx solid #aebaf8;
    border-radius: 10rpx;
    padding: 15rpx;
    height: auto;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: 85vw;
  }

  .bottom {
    /* position: fixed; */
    bottom: 0;
    margin-top: 2%;
    width: 100%;
  }