.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 10%;
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  }
  
  .title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
  }
  
  .info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  margin-top: 50rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  }
  
  .text {
  margin-bottom: 20px;
  font-size: 18px;
  color: #666;
  }
  
  button {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  border-radius: 4px;
  border: none;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  position: relative;
  }
  
  button:hover {
  background-color: #3E8E41;
  }
  
  button:before {
  content: "";
  display: block;
  position: absolute;
  top: -6px;
  left: -6px;
  right: -6px;
  bottom: -6px;
  border-radius: 10px;
  z-index: -1;
  background-color: #4CAF50;
  opacity: 0;
  transition: all 0.3s ease-in-out;
  }
  
  button:hover:before {
  opacity: 0.2;
  }