/* pages/personal/gitDownload/gitDownload.wxss */
.my-cells {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 3rpx 5rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
  padding: 20rpx;
  
}
.container {
  padding: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.input-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}

.input-box {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.download-button {
  height: 80rpx;
  font-size: 28rpx;
  background-color: #409eff;
  color: #fff;
  border-radius: 10rpx;
  padding: 0 30rpx;
}

.table-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding: 0 20rpx;
}
