/* pages/personal/timestampUtil/timestampUtil.wxss */

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 15rpx;
  margin-top: 30rpx;
}

.input-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  margin-top: 50rpx;
}

.input {
  width: 200px;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 0 10px;
  margin-right: 10px;
}

.button {
  width: 80px;
  height: 40px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 4px;
}

.result {
  font-size: 35rpx;
  margin-top: 20px;
}

.time {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.time-label {
  margin-right: 10rpx;
}

.time-value {
  font-size: 25rpx;
  color: #007aff;
}


.result-value {
  font-size: 35rpx;
  color: #007aff;
}
