/**index.wxss**/
page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.top_tip {
  font-size: 28rpx;
  font-family: 'PingFang SC', sans-serif;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
  text-align: center;
}

.power {
  margin-top: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
  padding-bottom: 1rpx;
  box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
  color: #4387d4;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.power_item_title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 10rpx;
  text-align: left;
  max-width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  margin-top: 5%;
  text-align: center;
}

.img {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  /*水平居中*/
}

image {
  height: 300rpx;
  width: 300rpx;
  object-fit: contain;
  box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
}